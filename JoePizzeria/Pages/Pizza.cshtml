@page
@model JoePizzeria.Pages.PizzaModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<div class="text-center">
    <div class="mainEffect">
        <h1 class="font-weight-bolder">
            Pizza Mania
        </h1>

    </div>
    <div class="container">
        <div class="row">
            
            @foreach (var pizzaItem in Model.mockPizzaDB)
            {
                var imagePath = "~/images/Pizzas/" + (pizzaItem.ImageUrl + ".png" );
                var namePath = pizzaItem.PizzaName;
                @*var pricePath = pizzaItem.FinalPrice;*@
                <div class="col-4 mb-5">
                    <div class="style">
                        <img src="@imagePath" class="img-fluid" asp-append-version="true" />
                        <p>@namePath</p>
                        @*<hr>
                        <p>@pricePath</p>*@
                    </div>
                    <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout"
                   asp-route-ImageUrl="@pizzaItem.ImageUrl" asp-route-PizzaPrice="@pizzaItem.FinalPrice"
                   asp-route-PizzaName="@pizzaItem.PizzaName" asp-route-OrderId="@pizzaItem.OrderId">Add to cart</a>
                    <br />


                </div>

            }

        </div>

    </div>
</div>